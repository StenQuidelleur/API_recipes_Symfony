{% extends 'base.html.twig' %}

{% block title %}Recipe{% endblock %}

{% block body %}
    <h1>{{ recipe.title }}</h1>
    <div class="row justify-content-center">
        <div class="card mx-3 mt-4" style="width: 18rem;">
            <img src="{{ recipe.picture }}" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">{{ recipe.title }}</h5>
                <p class="card-text">{{ recipe.subtitle }}</p>
                <ul class="list-group">
                    {% for ingredient in recipe.ingredient %}
                    <li class="list-group-item">{{ingredient.name}}</li>
                    {% endfor %}
                </ul>
                <a href="{{ path('recipe_edit', {'id': recipe.id}) }}" class="btn btn-primary mt-3">Edit</a>
                {{ include('recipe/_delete_form.html.twig') }}
            </div>
        </div>
    </div>

    <a href="{{ path('recipe_index') }}" class="btn btn-warning mt-2">back to list</a>
{% endblock %}
